{
  "name": "mk-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint && tsc",
    "lint:fix": "next lint --fix && tsc",
    "stylelint": "stylelint '**/*.css'",
    "stylelint:fix": "stylelint --fix '**/*.css'",
    "prettier": "prettier --check '**/**.{ts,js,tsx}' '*.{json,md,yml}'",
    "prettier:fix": "prettier --write '**/**.{ts,js,tsx}' '*.{json,md,yml}'",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:coverage:ci": "vitest --coverage --reporter=junit",
    "dev:content": "velite --watch",
    "build:content": "velite --clean",
    "prepare": "husky install",
    "cz": "bun git-cz",
    "storybook": "storybook dev -p 6006 --quiet --no-open",
    "build:storybook": "storybook build",
    "pages:build": "bunx @cloudflare/next-on-pages",
    "preview": "bun pages:build && wrangler pages dev",
    "deploy": "bun pages:build && wrangler pages deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv env.d.ts"
  },
  "dependencies": {
    "@chakra-ui/tooltip": "^2.3.1",
    "framer-motion": "^11.3.29",
    "next": "14.1.0",
    "next-intl": "^3.11.1",
    "next-themes": "^0.3.0",
    "react": "^18",
    "react-dom": "^18",
    "react-focus-lock": "^2.12.1",
    "react-remove-scroll": "^2.5.10",
    "storybook": "^8.0.8",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.3.2",
    "@cloudflare/next-on-pages": "1",
    "@cloudflare/workers-types": "^4.20240423.0",
    "@faker-js/faker": "^8.4.1",
    "@storybook/addon-essentials": "^8.0.8",
    "@storybook/addon-interactions": "^8.0.8",
    "@storybook/addon-links": "^8.0.8",
    "@storybook/addon-onboarding": "^8.0.8",
    "@storybook/addon-themes": "^8.0.8",
    "@storybook/blocks": "^8.0.8",
    "@storybook/nextjs": "^8.0.8",
    "@storybook/react": "^8.0.8",
    "@storybook/test": "^8.0.8",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "^1.4.0",
    "clsx": "^2.1.0",
    "commitizen": "^4.3.0",
    "cz-emoji-conventional": "^1.0.2",
    "eslint": "^8",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-check-file": "^2.8.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-next-on-pages": "^1.11.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.8.0",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "jsdom-testing-mocks": "^1.13.1",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "postcss-calc": "^9.0.1",
    "postcss-functions": "^4.0.2",
    "postcss-import": "^16.1.0",
    "postcss-mixins": "^10.0.0",
    "postcss-nested": "^6.0.1",
    "postcss-preset-env": "^9.5.5",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.2.5",
    "stylelint": "^16.3.1",
    "stylelint-config-property-sort-order-smacss": "^10.0.0",
    "stylelint-config-recess-order": "^5.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-semantic-groups": "^1.2.1",
    "tiny-invariant": "^1.3.3",
    "typescript": "^5",
    "velite": "^0.1.0-beta.13",
    "vercel": "^34.1.3",
    "vitest": "^2.0.5",
    "wrangler": "^3.64.0"
  },
  "engines": {
    "node": ">=18.20.1",
    "npm": "please-use-bun",
    "yarn": "please-use-bun",
    "pnpm": "please-use-bun"
  }
}
